{if $user->leaderdetail->type==4 OR $user->leaderdetail->type==6 OR $user->leaderdetail->type==46 OR $user->leaderdetail->type==100 OR $user->leaderdetail->type==666}
<div id="theContainer" class="galleryPage">
    <div class="theContainer">
			
        <div class="theContent">
        	<div class="section">
			{if $badges.result}
			 {foreach from=$badges.result key=k item=v}
            	<div class="col3">
                	<div class="box-gallery">
                    	<div class="imgbox" style="text-align:center; padding:10px 0 30px 0;">
                        	<a href="#" class="thumb-gallery"><img src="{$basedomain}public_assets/badges/{$v.image}" style="width:125px;" /></a>
                            <div class="gallery-author">
              
                                <h1 class="fl username" style="margin:0; color:#666; text-shadow:none;">{$v.name}  </h1>
                            </div> <!-- /.gallery-author -->
                        </div> <!-- /.imgbox -->
                        <div class="gallery-info">
                        	<span class="desc1">{$v.detail}   </span>
                        	<span class="desc2"> {$v.datetime|date_format:"%e %B %Y"}</span>
                            <a href="{$basedomain}badges/sendTo/{$v.id}">Send Badge</a>
                            
                            <a onclick="return confirm('Are you sure you want to delete this?')" href="{$basedomain}badges/deleteBadge/{$v.id}" class="tiptip icons icon_delete fr"  title="delete badge">&nbsp;</a>
                            <a href="{$basedomain}badges/edit/{$v.id}" class="tiptip icons icon_expand fr"  title="edit badge">&nbsp;</a>
                        </div> <!-- /.gallery-info -->
                    </div> <!-- /.box-gallery -->
                </div> <!-- /.col3 -->
				{/foreach} 
			{/if}	
            	
            </div> <!-- /.section -->
        </div> <!-- /.theContent -->
		<div class="paging" id="pagingbadge"></div> <!-- END .paging -->
				<script>
					getpaging(0,{$total.total},"pagingbadge","paging_ajax_badge",12);
				</script>
    </div> <!-- /.theContainer -->
</div> <!-- /#theContainer -->
{else}  

<div id="theContainer" class="galleryPage">
    <div class="theContainer">
		<div class="head-title">
			<h1 class="fl">This Page For Highest User Level Only.</h1>
		</div>
	</div>
</div>
{/if}
